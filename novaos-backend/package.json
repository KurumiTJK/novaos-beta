{
  "name": "novaos-backend",
  "version": "10.0.0",
  "description": "NovaOS - Enforcement-first AI kernel with Shield, Lens, and Sword",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "dev:mock": "cross-env USE_MOCK_PROVIDER=true tsx watch src/server.ts",
    "dev:openai": "cross-env PREFERRED_PROVIDER=openai tsx watch src/server.ts",
    "dev:gemini": "cross-env PREFERRED_PROVIDER=gemini tsx watch src/server.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "docker:build": "docker build -t novaos-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env novaos-backend"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.3",
    "openai": "^4.70.0",
    "uuid": "^10.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.7.4",
    "@types/uuid": "^10.0.0",
    "cross-env": "^7.0.3",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
